@using ApplicationLayer.ViewModels;

@model PlaylistViewModel; 

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mx-auto">
            @if (TempData["InvalidMusic"] != null)
            {
                <div class="alert alert-danger strong-red" role="alert">
                    @TempData["InvalidMusic"]
                </div>
            }
            <div class="body">
                <form id="postForm" asp-action="AddPlaylist" asp-controller="Playlist" method="post" enctype="multipart/form-data">
                    <div class="mb-3 text-center">
                        <div class="custom-file">
                            <input type="file" class="form-control custom-file-input" id="formImage" name="musicImage" accept="image/*" onchange="previewImage(event)">
                            <label class="custom-file-label text-primary" for="formImage"><i class="bi bi-images"></i></label>
                        </div>
                        <div class="text-xxl-center" style="margin-left: 232px" id="imagePreview"></div>
                        <label for="Name" class="form-label text-dark border-bottom text-center">Name:</label>
                        <input type="text" class="form-control rounded-pill border-primary" asp-for="Name" id="Name" placeholder="Enter playlist name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                        <div class="mb-3">
                            <label for="Description" class="form-label text-dark border-bottom text-center">Description:</label>
                            <textarea class="form-control rounded-pill border-primary" asp-for="Description" id="Description" rows="3" placeholder="Enter playlist description"></textarea>
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-primary rounded-pill">Add Playlist <i class="bi bi-plus-lg"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 10px;
    }

    .strong-red {
        background-color: #dc3545;
        color: #fff;
    }

    .card {
        border: none;
        border-radius: 15px;
        margin-top: -10px;
        background: linear-gradient(135deg, #6a0dad, #000000);
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .form-label {
        color: #fff;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 12px;
        margin-bottom: 20px;
    }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.3);
        }

    .custom-file-label {
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 12px;
        cursor: pointer;
    }

    .custom-file-input {
        display: none;
    }

    .body {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding-top: 20px;
        padding-bottom: 20px;
        padding-left: 5px;
        padding-right: 5px;
        margin-bottom: 80px;
    }
    .btn-primary:focus {
        box-shadow: none;
    }

    .text-danger {
        color: #FF5252;
    }

    #imagePreview {
        margin-top: 10px;
        margin-left: 50px;
        width: 150px;
        height: 150px;
        border-radius: 10%;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: transform 0.3s;
    }

        #imagePreview:hover {
            transform: scale(1.1);
        }

        #imagePreview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .form-control {
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
        border: 1px solid #6c757d; 
        border-radius: 10px;
        padding: 12px;
        margin-bottom: 20px;
    }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.3);
            border-color: #6c757d;
            outline: 0; 
        }
</style>

<script>
    function previewImage(event) {
        var file = event.target.files[0];
        if (file) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('imagePreview');
                output.innerHTML = '<img src="' + reader.result + '" class="img-fluid" alt="Preview">';
            }
            reader.readAsDataURL(file);
        }
    }

    function submitForm() {
        var imageInput = document.getElementById('formImage');

        if (imageInput.files.length > 0 && audioInput.files.length > 0) {
            var imageFile = imageInput.files[0];

            var imageReader = new FileReader();
            imageReader.onload = function () {
                var imageBase64String = imageReader.result.split(',')[1];
                document.getElementById('imageBase64').value = imageBase64String;
            };
            imageReader.readAsDataURL(imageFile);
        } else {
            var errorMessageElement = document.getElementById('errorMessage');
            errorMessageElement.innerText = 'Please select an image and an audio file.';
        }
    }
</script>
