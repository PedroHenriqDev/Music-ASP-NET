@using ApplicationLayer.ViewModels
@model DisplayMusicViewModel

<div class="music-container">
    @foreach (var music in Model.CompleteMusics)
    {
        <div class="music-item">
            <form asp-action="" asp-controller="" method="get">
                <input type="hidden" name="id" value="@music.Music.Id" />
                <button class="btn btn-dark">
                    <img src="data:image/png;base64,@(Convert.ToBase64String(music.MusicData.Picture))" class="img-fluid rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                    @music.Music.Name
                </button>
            </form>
        </div>
    }
</div>
